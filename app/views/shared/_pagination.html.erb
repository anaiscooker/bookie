<div class="pagerNavigation">
  <%= link_to 'Neuere', { :page => pages.current.previous }, { :title => 'go to previous page' } if pages.current.previous %>
  <%= link_to 'Ältere', { :page => pages.current.next }, { :title => 'go to next page' } if pages.current.next %> 
  Kommentare anzeigen (oder blättern zu Seite:
  <% if pages.current.to_i - 3 > 1 %>&hellip;<% end %>
  <% 3.downto 1 do |i| %>
    <% index = pages.current.to_i - i %>
    <%= link_to(pages[index].to_i, { :page => index}) if pages.has_page_number? index %>
  <% end %>
  <%= pages.current.to_i %>
  <% for i in 1..3 do %>
    <% index = pages.current.to_i + i %>
    <%= link_to(pages[index].to_i, { :page => index}) if pages.has_page_number? index %>
  <% end %><% if pages.length > pages.current.to_i + 3 %>&hellip;<% end %>)
</div>
