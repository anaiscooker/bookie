<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <%= javascript_include_tag :defaults %>
    <%= active_scaffold_includes %>
    <%= stylesheet_link_tag 'bookie' %>
  </head>
  <body>

    <div id="container">

      <!-- Sidebar -->
      <div id="sidebar">

        <!-- Uebersichtsinformation -->
        <div id="info">
          <%= render :partial => 'shared/greeting' %>
        </div>
        <!-- Uebersichtsinformation Ende -->

        <!-- Navigation -->
        <ul id="navigation">
          <%= render :partial => 'shared/navigation' %>
        </ul>
        <!-- Navigation Ende -->

        <% if false %>
          <!-- Top-5 -->
          <%= render :partial => 'shared/score_board' %>
          <!-- Top-5 Ende -->
        <% end %>

        <div id="halloffame">
          <%= render :partial => 'shared/hof' %>
        </div>

        <div style="text-align:center;font-size:80%;">
          <p>Bookie &copy;2010 by Sigi</p>
          <p>powered by&nbsp;
            <a href="http://www.rubyonrails.org"><img align="middle" height="40" src="/images/rails.png" /></a></p>
        </div>
      </div>
      <!-- Sidebar Ende -->

      <!-- Hauptteil -->
      <div id="content">
        <%= yield %>
      </div>
      <!-- Hauptteil Ende -->

    </div>
  </body>
</html>
