<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <%= javascript_include_tag :defaults %>
    <%= active_scaffold_includes %>
    <%= stylesheet_link_tag 'bookie' %>
  </head>
  <body>
    <div id="container">

      <!-- Sidebar -->
      <div id="sidebar"><% if false %>

        <!-- Uebersichtsinformation -->
        <div id="info">
          <h3><%=h current_time %></h3>
          <p><b>Hallo <%=h @user_info[:user].login %></b>, du hast
            <b><%=h @user_info[:score] %>&nbsp;Punkte</b> und stehst damit auf <b>Rang <%=h @user_info[:rank] %></b>.</p>
          <p>Viel Spaß beim Tippen!</p><hr/>
          <p><b>Nächste Begegnung:</b></p> <p><%= @next_match %></p>
        </div>
        <!-- Uebersichtsinformation Ende -->

        <!-- Navigation -->
        <ul id="navigation">
          <h3>Menü</h3>
          <li><%= link_to 'Stammtisch', :controller => '/comments', :action => 'list' %></li>
          <li><%= link_to 'Tippen', :controller => '/bets', :action => 'next', :id => 4 %></li>
          <li><%= link_to 'Rangliste', :controller => '/bets', :action => 'scoreboard' %></li>
          <li><%= link_to 'Experten-Rangliste', :controller => '/bets', :action => 'scoreboard', :m => 'e' %></li>
          <% if @current_user.has_role "admin" %>
            <li><%= link_to 'Begegnungen', :controller => '/matches', :action => 'last', :id => 4 %></li>
            <li><%= link_to 'Mannschaften', :controller => '/teams', :action => 'list' %></li>
            <li><%= link_to 'Spielgruppen', :controller => '/division', :action => 'list' %></li>
            <li><%= link_to 'Konten', :controller => '/admin/user', :action => 'list' %></li>
          <% end %>
          <li><%= link_to 'Abmelden', :controller => '/logout' %></li>
        </ul>
        <!-- Navigation Ende -->

        <% if false %>
          <!-- Top-5 -->
          <% if !@scoreboard.nil? %>
            <div id="quickscore">
              <h3>Top 5</h3>
              <table>
                <tr>
                  <th>Rang</th> <th>Spieler</th> <th>Pkt.</th>
                </tr>
                <% for score in @scoreboard.slice(0..4) %>
                  <tr>
                    <td align="right"><%=h score[:rank] %></td>
                    <td><%= link_to_user score[:user] %></td>
                    <td align="right"><%=h score[:score] %></td>
                  </tr>
                <% end %>
              </table>
            </div>
          <% end %>
          <!-- Top-5 Ende -->
        <% end %>

        <div id="halloffame">
          <h3>Hall of Fame</h3>
          <table style="margin:0.2em" cellspacing="7">
            <tr>
              <td><%= image_tag 'knight.jpg', :class => 'hofpic' %></td>
              <td valign="top"><b>Hoff-Verdienstkreuz am Bande:</b><br/>
                <%= hof_linker( @hof, :correct ) %> mit <%= @hof[:correct][0][:correct] %>
                korrekt getippten Ergebnissen.</td>
            </tr>
            <tr>
              <td><%= image_tag 'netzer_head.jpg', :class => 'hofpic' %></td>
              <td valign="top"><b>Günter-Netzer-Award:</b><br/>
                <%= hof_linker( @hof, :tendency ) %> mit <%= @hof[:tendency][0][:tendency] +
                  @hof[:tendency][0][:correct] %> korrekt getippten Tendenzen.</td>
              </tr>
              <tr>
                <td><%= image_tag 'beckmann_head.jpg', :class => 'hofpic' %></td>
                <td valign="top"><b>Reinhold-Beckmann-Medaille:</b><br/>
                  <%= hof_linker( @hof, :wrong ) %> mit <%= @hof[:wrong][0][:wrong] %>
                  komplett falschen Tipps.</td>
              </tr>
            </tr>
          </table>
        </div>

        <div style="text-align:center;font-size:80%;">
          <p>Bookie &copy;2010 by Sigi</p>
          <p>powered by&nbsp;
            <a href="http://www.rubyonrails.org"><img align="middle" height="40" src="/images/rails.png" /></a></p>
        </div>
        <% end %>
      </div>
      <!-- Sidebar Ende -->

      <!-- Hauptteil -->
      <div id="content">
        <%= yield %>
      </div>
      <!-- Hauptteil Ende -->

    </div>
  </body>
</html>
